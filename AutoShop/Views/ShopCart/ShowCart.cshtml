@model IEnumerable<ShopCartItem>

<h1 style="color:crimson">Your cart</h1>

<div class="row mt-5 mb-2 container">

    @foreach (var el in Model)
    {
        <div class="alert alert-warning mt-3">
            <b>Car: </b> @el.Car.Name <br/>
            <b>Price: </b> @el.Car.Price
        </div>
    }
    <hr/>
    
    <div class="btn btn-outline-warning">
       <a style="text-decoration: none; " asp-controller="Order" asp-action="Checkout"><h2>Pay</h2></a> 
    </div>

</div>

 